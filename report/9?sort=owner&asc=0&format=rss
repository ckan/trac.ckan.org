                  <title>#2416: Normalise resource/data types</title>
                  <!-- FIXME: we end up with multiple pubDate -->
                  <pubDate>Wed, 23 May 2012 17:09:06 GMT</pubDate>
                  <!-- FIXME: we end up with multiple pubDate -->
                  <pubDate>Wed, 18 Jul 2012 13:23:22 GMT</pubDate>
